<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.elsonji.newshub.AboutActivity">

    <TextView
        android:id="@+id/about_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:padding="10dp"
        tools:text="@string/about_content" />

    <ImageView
        android:id="@+id/powered_by_google"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_gravity="start"
        android:contentDescription="@string/powered_by_google"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:src="@drawable/powered_by_google"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/powered_by"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        tools:text="@string/powered_by" />

</LinearLayout>
